<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout2_ll_show"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.example.recipes.view.waterwave_progress.WaterWaveProgress
                android:id="@+id/layout2_progress1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:maxProgress="99"
                app:progress="15"
                app:progressWidth="2dp"
                app:progressBgColor="#555555"
                app:progressColor="@android:color/holo_orange_dark"
                app:waterWaveBgColor="#ffffff"
                app:textColor="#444444"
                app:waterWaveColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="storage period"
                android:textColor="#444444"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.example.recipes.view.waterwave_progress.WaterWaveProgress
                android:id="@+id/layout2_progress2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:maxProgress="99"
                app:progress="15"
                app:progressBgColor="#555555"
                app:progressWidth="2dp"
                app:textColor="#444444"
                app:progressColor="@android:color/holo_orange_dark"
                app:waterWaveBgColor="#ffffff"
                app:waterWaveColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="place the time"
                android:textColor="#444444"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.example.recipes.view.waterwave_progress.WaterWaveProgress
                android:id="@+id/layout2_progress3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:maxProgress="99"
                app:progress="15"
                app:progressWidth="2dp"
                app:progressBgColor="#555555"
                app:textColor="#444444"
                app:progressColor="@android:color/holo_orange_dark"
                app:waterWaveBgColor="#ffffff"
                app:waterWaveColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="baking time"
                android:textColor="#444444"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2" />
</LinearLayout>